{
    "name": "ROS 2 Sync-Time",
    "privileged": true,
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/sync_time_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/sync_time_ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "RMW_IMPLEMENTATION": "rmw_zenoh_cpp",
        "ROS_DOMAIN_ID": "0"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh"
}